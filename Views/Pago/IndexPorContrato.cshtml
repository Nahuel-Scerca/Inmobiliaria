@model IEnumerable<WebApplicationPrueba.Models.Pago>

@{
    ViewData["Title"] = "Pagos";
}

<h1>Pagos De Contrato Nº @((ViewBag.Contrato as Contrato).Id )</h1>

<p>
    <a class="btn btn-outline-success" asp-action="Create" asp-route-id="@((ViewBag.Contrato as Contrato).Id)">Crear Pago</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato.Inquilino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato.Inmueble)
            </th>
            <th>
                Dueño Inmueble
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @(item.Monto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contrato.Id)
                </td>
                <td>
                    @(item.Contrato.Inquilino.Nombre + " " + item.Contrato.Inquilino.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contrato.Inmueble.Direccion)
                </td>
                <td>
                    @(item.Contrato.Inmueble.Duenio.Nombre + " " + item.Contrato.Inmueble.Duenio.Apellido)
                </td>

                <td>
                    @Html.ActionLink("", "Details", new { id = item.Id }, new { @class = "btn btn-outline-primary fa  fa-info" })
                </td>
                <td>

                    @Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger fa fa-trash" })
                </td>
            </tr>
        }
    </tbody>
</table>
