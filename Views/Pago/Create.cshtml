@model WebApplicationPrueba.Models.Pago

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" value=@ViewBag.Contrato.PrecioMensual class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="ContratoId" class="control-label"></label>
                
                
                 <input  asp-for="ContratoId" value=@ViewBag.Contrato.Id class="form-control" />
                 

                <span asp-validation-for="ContratoId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-danger" asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
