@model WebApplicationPrueba.Models.Contrato

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Contrato Nº @Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaDesde)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaDesde)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaHasta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaHasta)
        </dd>
        <dt class="col-sm-2">
            Inquilino
        </dt>
        <dd class="col-sm-10">
            <a class="btn btn-outline-secondary" asp-controller="Inquilino" asp-action="Edit" asp-route-id="@Model.Inquilino.Id" title="Editar"> @(Model.Inquilino.Nombre + " "+ Model.Inquilino.Apellido)</a>

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InmuebleId)
        </dt>
        <dd class="col-sm-10">
            <a class="btn btn-outline-secondary" asp-controller="Inmueble" asp-action="Edit" asp-route-id="@Model.Inmueble.Id" title="Editar"> @(Model.Inmueble.Direccion + "  Inmueble Nº " + Model.Inmueble.Id)</a>

        </dd>

        <dt class="col-sm-2">
            Dueño
        </dt>
        <dd class="col-sm-10">
            <a class="btn btn-outline-secondary" asp-controller="Propietarios" asp-action="Edit" asp-route-id="@Model.Inmueble.Duenio.Id" title="Editar">  @(Model.Inmueble.Duenio.Nombre + " "+ Model.Inmueble.Duenio.Apellido)</a>

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioMensual)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecioMensual)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new {  id = Model.Id }, new { @class = "btn btn-outline-warning" }) 

    <a class="btn btn-outline-danger" asp-action="Index">Volver al a lista</a>
</div>
